{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "build",
    "dist",
    "target"
  ]
}
